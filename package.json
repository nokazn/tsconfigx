{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/nokazn/strip-json-trailing-commas"
  },
  "license": "MIT",
  "author": {
    "name": "nokazn",
    "url": "https://github.com/nokazn"
  },
  "sideEffects": false,
  "exports": {
    "require": "./lib/index.js",
    "import": "./esm/index.js",
    "default": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib",
    "esm",
    "src"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --ignore-path ./.prettierignore --write ./**/*.{t,j}s{,x}",
    "lint": "eslint --ignore-path .eslintignore ./**/*.{t,j}s{,x}",
    "lint:fix": "eslint --ignore-path .eslintignore ./**/*.{t,j}s{,x} --fix",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci",
    "build:cjs": "rimraf dist/ && tsc -p ./tsconfig.cjs.json",
    "build:esm": "rimraf dist/ && tsc -p ./tsconfig.esm.json",
    "prepublish": "yarn build:cjs && yarn build:esm"
  },
  "dependencies": {
    "strip-bom": "^4.0.0",
    "strip-json-comments": "^3.1.1",
    "strip-json-trailing-commas": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^6.0.0",
    "jest": "^26.2.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}

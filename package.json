{
  "name": "tsconfigx",
  "version": "1.0.2",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/nokazn/tsconfigx"
  },
  "license": "MIT",
  "author": {
    "name": "nokazn",
    "url": "https://github.com/nokazn"
  },
  "sideEffects": false,
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --ignore-path ./.prettierignore --write ./**/*.{t,j}s{,x}",
    "lint": "eslint --ignore-path .eslintignore ./**/*.{t,j}s{,x}",
    "lint:fix": "eslint --ignore-path .eslintignore ./**/*.{t,j}s{,x} --fix",
    "tsc": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci",
    "build": "rimraf lib/ && tsc -p ./tsconfig.build.json",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "strip-bom": "^4.0.0",
    "strip-json-comments": "^3.1.1",
    "strip-json-trailing-commas": "^1.0.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.5",
    "@tsconfig/recommended": "1.0.1",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "esbuild": "^0.14.8",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^24.3.2",
    "husky": "^6.0.0",
    "jest": "^26.2.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
